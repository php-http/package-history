{
    "name": "php-http/client-tools",
    "description": "Tools for HTTPlug client implementors",
    "license": "MIT",
    "keywords": ["http", "client", "httplug", "tools"],
    "homepage": "http://httplug.io",
    "authors": [
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4",
        "php-http/httplug": "^1.0.0-alpha2@dev"
    },
    "require-dev": {
        "phpspec/phpspec": "^2.4@dev",
        "henrikbjorn/phpspec-code-coverage" : "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Http\\Client\\Tools\\": "src/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpspec run",
        "test-ci": "vendor/bin/phpspec run -c phpspec.yml.ci"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    }
}
